empleado = []
pago = []
total_nomina = 0
max_pago = 0
empleado_max = 0

def ingresar_datos(empleado, pago):
    for i in range(5):
        print("dime tu nombre")
        nombre_empleado = input()
        empleado.append(nombre_empleado)

        print("cual es tu sueldo")
        salario = float(input())
        pago.append(salario)

def calcular_nomina(empleado, pago):
    total_nomina = 0
    max_pago = 0
    empleado_max = 0
    for i in range(len(pago)):
        total_nomina += pago[i]
        if pago[i] > max_pago:
            max_pago = pago[i]
            empleado_max = empleado[i]
    return total_nomina, max_pago, empleado_max

def mostrar_resultados(total_nomina, max_pago, empleado_max):
    print("La nómina total es:", total_nomina)
    print("El empleado que más gana es:", empleado_max, "con un salario de", max_pago)

ingresar_datos(empleado, pago)
total_nomina, max_pago, empleado_max = calcular_nomina(empleado, pago)
mostrar_resultados(total_nomina, max_pago, empleado_max)

calif=[]
nombres=[]
nommayor=[]
def leer (c,n):
    for i in range(10):
        n.append(input("dime tu nombre"))
        c.append(float(input("dame la calificacion"))) # Convert input to float

def alumno_mayor(c,n,nm):
    for i in range(len(c)): # Iterate based on the length of the lists
        if c[i]>8.5:
            nm.append(n[i]) # Correct assignment using append

def resultado(nm):
    print("alumnos con mayor promedio")
    for i in nm:
        print(f"{i}")

leer(calif, nombres)
alumno_mayor(calif, nombres, nommayor)
resultado(nommayor)